<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="AWS.CountdownWindow"
        Title="Обратный отсчет"
        Width="300"
        Height="200"
        WindowStartupLocation="CenterOwner"
		CanResize="False">
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
        <!-- Таймер -->
        <TextBlock Name="TimerText" 
                   FontSize="32" 
                   FontWeight="Bold"
                   Foreground="Red"
                   HorizontalAlignment="Center"/>
        
        <!-- Сообщение -->
        <TextBlock Name="MessageText"
                   Text="Осталось времени:"
                   HorizontalAlignment="Center"/>
        
        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10"></StackPanel>
		<Button Name="PauseButton" Content="Пауза" Click="PauseButton_Click" Width="80"/>
		<Button Name="CancelButton" Content="Отмена" Click="CancelButton_Click" Width="80"/>
	</StackPanel>
</Window>